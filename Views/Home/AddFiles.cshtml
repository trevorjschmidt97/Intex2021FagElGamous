@{
}


<div class="container">
    <main role="main" class="pb-3">
        <h1>Upload Files/Photos</h1>

        <div class="row">
            <div class="col-md-6">
                <section>
                    <form asp-action="AddFiles" method="post">
                        

                        <!-- Upload photo -->
                        <div class="panel">
                            <div class="button_outer ">
                                <div class="btn_upload">
                                    <input type="file">
                                    Upload Photo
                                </div>
                                <div class="processing_bar"></div>
                                <div class="success_box"></div>
                            </div>
                        </div>
                        <div class="error_msg"></div>
                        <div class="uploaded_file_view">
                            <span class="file_remove">X</span>
                        </div>

                        <div class="form-group">
                            <p>
                                <a asp-area="" asp-controller="Home" asp-action="Register">Register as a new user</a>
                            </p>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </main>
</div>
