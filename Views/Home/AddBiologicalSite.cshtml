@{
    ViewData["Title"] = "Biological Samples and Burial Sites";
}
@model AddBiologicalViewModel
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1>
        Biological Samples
    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item breadcrumbcolor">

        </li>

    </ol>
    <div class="form-group">
        <form asp-action="AddBiologicalSite" method="post">

            <h4>Rack or Bag?</h4>
            <label asp-for="RackBag">
                <input required asp-for="RackBag" value="R" type="radio" />
                <span class="radio-ghost funkay"></span>
                Rack
            </label>
            <label>
                <input required asp-for="RackBag" value="B" type="radio" />
                <span class="radio-ghost funkay"></span>
                Bag
            </label>

            <div class="form-group">
                <label asp-for="RackBagNum">Rack/Bag Number:</label>
                <input class="form-control" required asp-for="RackBagNum" />
            </div>
            <div class="form-group">
                <label asp-for="BurialSiteId">Burial Site ID:</label>
                <input class="form-control" required asp-for="BurialSiteId" />
            </div>
            <div class="form-group">
                <label asp-for="Burial">Burial Number:</label>
                <input class="form-control" required asp-for="Burial" />
            </div>
            <div>
                <label asp-for="Date">Date:</label>
                <input asp-for="Date" />
            </div>
            <div class="form-group">
                <h4>Previously Sampled?</h4>
                <input asp-for="PreviouslySampled" type="radio" name="sampled" value="Yes"> Yes<br>
                <input asp-for="PreviouslySampled" type="radio" name="sampled" value="No"> No<br>
            </div>
            <div>
                <label asp-for="Notes">Notes:</label>
                <textarea asp-for="Notes"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Cluster">Cluster:</label>
                <input class="Cluster" required asp-for="Cluster" />
            </div>

            <!-- NS -->
            <div>
                <label asp-for="NS">N/S:</label>
                <input asp-for="NS" value="N" type="radio" /><span>N</span>
                <input asp-for="NS" value="S" type="radio" /><span>S</span>
            </div>

            <!-- NS Top -->
            <div>
                <label asp-for="Nstop">N/S Coordinates:</label>
                <select asp-for="Nstop">

                    <option value="0">0/10</option>
                    <option value="10">10/20</option>
                    <option value="20">20/30</option>
                    <option value="30">30/40</option>
                    <option value="40">40/50</option>
                    <option value="50">50/60</option>
                    <option value="60">60/70</option>
                    <option value="70">70/80</option>
                    <option value="80">80/90</option>
                    <option value="90">90/100</option>
                    <option value="100">100/110</option>
                    <option value="110">110/120</option>
                    <option value="120">120/130</option>
                    <option value="130">130/140</option>
                    <option value="140">140/150</option>
                    <option value="150">150/160</option>
                    <option value="160">160/170</option>
                    <option value="170">170/180</option>
                    <option value="180">180/190</option>
                    <option value="190">190/200</option>
                    <option value="200">200/210</option>
                    <option value="-42" selected>Select</option>
                </select>
            </div>

            <!-- EW -->
            <div>
                <label asp-for="EW">E/W:</label>
                <input asp-for="EW" value="E" type="radio" /><span>E</span>
                <input asp-for="EW" value="W" type="radio" /><span>W</span>
            </div>

            <!-- EW Top -->
            <div>
                <label asp-for="Ewtop">E/W Coordinates:</label>
                <select asp-for="Ewtop">
                    <option value="0">0/10</option>
                    <option value="10">10/20</option>
                    <option value="20">20/30</option>
                    <option value="30">30/40</option>
                    <option value="40">40/50</option>
                    <option value="50">50/60</option>
                    <option value="60">60/70</option>
                    <option value="70">70/80</option>
                    <option value="80">80/90</option>
                    <option value="90">90/100</option>
                    <option value="100">100/110</option>
                    <option value="110">110/120</option>
                    <option value="120">120/130</option>
                    <option value="130">130/140</option>
                    <option value="140">140/150</option>
                    <option value="150">150/160</option>
                    <option value="160">160/170</option>
                    <option value="170">170/180</option>
                    <option value="180">180/190</option>
                    <option value="190">190/200</option>
                    <option value="200">200/210</option>
                    <option value="-42" selected>Select</option>
                </select>
            </div>

            <!-- Quadrant -->
            <div>
                <label asp-for="Quadrant">Quadrant:</label>
                <select asp-for="Quadrant">
                    <option value="All" selected>All</option>
                    <option value="NE">NE</option>
                    <option value="NW">NW</option>
                    <option value="SE">SE</option>
                    <option value="SW">SW</option>
                </select>
            </div>
            <button type="submit" class="btn btn-dark"> Submit </button>
        </form>
    </div>


</div>
