@model ResetPasswordViewModel

<div class="container">
    <main role="main" class="pb-3">
        <div>
            <h2>Manage your account</h2>
            <h4>Change your account settings</h4>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Profile">Profile</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="ResetEmail">Email</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="ResetPassword">Password</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="ResetUserInfo">Personal data</a></li>
                    </ul>
                </div>
                <div class="col-md-9">
                    <div class="container">
                        <main role="main" class="pb-3">
                            <h4>Reset your password</h4>
                            <hr />
                            <div class="row">
                                <div class="col-md-4">
                                    <form method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        @*<input asp-for="Input.Code" type="hidden" />*@

                                        <div class="form-group">
                                            <label asp-for="PreviousPassword">Previous Password</label>
                                            <input asp-for="PreviousPassword" class="form-control" />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="NewPassword">New Password</label>
                                            <input asp-for="NewPassword" class="form-control" type="password" />
                                            @*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="NewPasswordConfirmed">New Password Confirmed</label>
                                            <input asp-for="NewPasswordConfirmed" class="form-control" type="password" />
                                            @*<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>*@
                                        </div>

                                        <button type="submit" class="btn btn-primary">Reset</button>
                                    </form>
                                </div>
                            </div>
                        </main>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>



